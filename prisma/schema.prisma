generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  words    Word[]
}

model Word {
  id       String @id @default(uuid())
  user     User   @relation(fields: [userId], references: [id])
  userId   String
  content  String
  seedWord String
}

model SeedWord {
  id     String @id @default(uuid())
  word   String @unique
}
